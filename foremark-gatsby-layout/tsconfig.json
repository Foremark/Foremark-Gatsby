{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "module": "CommonJS",
        "target": "es5",
        "jsx": "react",
        "jsxFactory": "React.h", /* Preact */
        "moduleResolution": "Node",
        "lib": [
            "ES5",
            "DOM",
            "ES2015.Collection",
            "ES2015.Promise",
            "ES2015.Core",
        ],
        "experimentalDecorators": true,
        "types": ["node"],
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*.ts",
        "foremark/app/view/**/*.ts",
        "foremark/app/view/**/*.tsx",
    ],
    "exclude": [
        "*.js",
        "node_modules"
    ],
}
